MDScreen:
    name: "login"
    MDFloatLayout:
        md_bg_color: 1,1,1,1
        Image:
            source: "assets/login1.png"
            size_hint: .7, .7
            pos_hint: {"center_x": .5, "center_y": 0.8}
    
    MDLabel:
        text: "L o g i n"
        font_name: "Roboto"
        font_size: "23sp"
        pos_hint: {"center_x": 0.5, "center_y": 0.65}
        bold: True
        halign: "center"
        color: rgba(34, 34, 34,255)

    MDFloatLayout:
        size_hint: .7, .07
        pos_hint: {"center_x": .5, "center_y": 0.5}
        TextInput:
            hint_text: "Email"
            icon_right: "account"
            font_name: "Roboto"
            size_hint_y: .75
            pos_hint: {"center_x": .5, "center_y": .5}
            background_colour: 1, 1, 1, 0
            foreground_color: rgba(0, 0, 59, 255)
            cursor_color: rgba(0, 0, 59, 255)
            font_size: "14sp"
            cursor_width: "2sp"
            multiline: False
    MDFloatLayout:
        pos_hint: {"center_x": .45, "center_y": .3}
        size_hint_y: .03
        # md_bg_color: rgba(178, 178, 178, 255)

    MDFloatLayout:
        size_hint: .7, .07
        pos_hint: {"center_x": .5, "center_y": 0.4}
        TextInput:
            hint_text: "Password"
            icon_right: "key"
            font_name: "Roboto"
            size_hint_y: .75
            pos_hint: {"center_x": .5, "center_y": .5}
            background_colour: 1, 1, 1, 0
            foreground_color: rgba(0, 0, 59, 255)
            cursor_color: rgba(0, 0, 59, 255)
            font_size: "14sp"
            cursor_width: "2sp"
            multiline: False
            password: True
    MDFloatLayout:
        pos_hint: {"center_x": .45, "center_y": .3}
        size_hint_y: .03
        # md_bg_color: rgba(178, 178, 178, 255)

    Button:
        text: "LOGIN"
        size_hint: .66, .065
        pos_hint: {"center_x": 0.5, "center_y": .2}
        background_colour: 0, 0, 0, 0
        font_name: "Roboto"
        on_release:
            root.manager.transition.direction = "left"
            root.manager.current = "home"
        canvas.before:
            Color:
                rgb: rgba(50, 0, 231, 255)
            RoundedRectangle:
                size: self.size
                pos: self.pos
                radius: [5]
